<% if show_sort_and_per_page? and !active_sort_fields.blank? %>
<div class="sort">
  <label for="sortOption">Sort</label>
  <select id="sortOption" onchange="document.location.href= this.options[this.selectedIndex].value;" name="sort">
    <%- active_sort_fields.each do |sort_key, field_config| %>
      <option value="<%= url_for(params_for_search(:sort => sort_key)) %>" 
        <% if current_sort_field.label == field_config.label %>selected<% end%>
      ><%= field_config.label.titleize %></option>
    <%- end -%>
  </select>
</div>
<% end %>

<%= form_tag search_action_url, :method => :get, :class => 'search-query-form clearfix navbar-form' do %>
  <h1 class="title" for="option-catalog-search">United States Federal Government Documents Registry</h1>

  <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8)) %>
  <div class="search_fields">
    <label class="offscreen" for="ql-input">Search Text Field</label>
    <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.search.placeholder'), :class => "search-input-text", :id => "ql-input", :autofocus => should_autofocus_on_search_box? %>
    <div class="search-input-options" style="display:block;">
      <label class="offscreen" for="search-input-select">Search Field List</label>
      <% unless search_fields.empty? %>
        <%= select_tag(:search_field, options_for_select(search_fields, h(params[:search_field])), :title => t('blacklight.search.form.search_field.title'), :class=>"search-input-select", :id=>"search-input-select", :size=>"1") %>
      <% end %>
    </div>
    <button class="button search">
      <span>Search</span>
    </button>
  </div>
<% end %>

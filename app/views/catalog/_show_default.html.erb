<%# default partial to display solr document fields in catalog show view -%>
<table class="citation" style="margin: 0px; margin-top: 2em; padding: 0px; *width=auto" summary="This table displays bibliographic information about this specific item">
  <tbody>
  <% document_show_fields(document).each do |field_name, field| -%>
    <% if should_render_show_field? document, field %>
      <tr valign="top">
        <th class="blacklight-<%= field_name.parameterize %>"><%= render_document_show_field_label document, field: field_name %></th>
        <td class="blacklight-<%= field_name.parameterize %>">
          <% if field_name == 'oclcnum_t' %>
            <%= link_to document[field_name], "https://www.worldcat.org/oclc/#{document[field_name]}", target:"_blank" %>
          <% elsif field_name == 'relationships' %>
            <% document[field_name].each do |rel_uuid| %>
              <%= link_to "Related", search_action_url(q: document[field_name][0], search_field: 'relationships') %>
            <% end %>
          <% elsif field_name == 'ht_ids' %>
            <% document[field_name].each do |ht_id| %>
              <div class="fulltext"><%= link_to "HathiTrust Full View", "http://catalog.hathitrust.org/Record/#{ht_id}" %></div>
            <% end %>
          <% else %>
            <%= render_document_show_field_value document, field: field_name %>
          <% end -%>
        </td>
      </tr>
    <% end -%>
  <% end -%>
  </tbody>
</table>

<%= render "marc_view" %>
